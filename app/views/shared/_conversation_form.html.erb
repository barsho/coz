

<%= form_for(@conversation, :remote => true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

	<%= f.submit "Create", {  id: "submitConversation" } %> 
  <%= f.text_field :title, :id => "conversation_field", placeholder: "Compose new tread..." %>

  <%= f.hidden_field :conversationable_id , :value => conversationable.id  %>
	<%= f.hidden_field :conversationable_type, :value => conversationable.class.name.sub("Controller", "").singularize %>

<% end %>