<% @conversation = @project.conversations[5] %>
<div id="feedFrame">
	<div id="feedFrame_dropShadow"></div>

	<% if @conversation.posts.any? %>
	<% @index_date = @conversation.posts[0].created_at %>
	

	<div class="column feed" id="c<%= @conversation.id %>">
		<div class="column_innerframe">
			<div class="column_headerframe">
				<div class="column_header_dateLabel"><%= @index_date.strftime("%B %d")%></div>
			</div>
			<div class="column_scrollframe">

	<% @conversation.posts.each do |post| %>

		<% if post.created_at.strftime("%B %d") != @index_date.strftime("%B %d") %>
			<%  @index_date = post.created_at %>
				</div>
			</div>
		</div><div class="column feed" id="c<%= @conversation.id %>">
			<div class="column_innerframe">
				<div class="column_headerframe">
					<div class="column_header_dateLabel"><%= @index_date.strftime("%B %d")%></div>
				</div>
				<div class="column_scrollframe">	
		<% end %>
	

				
					    <%= render post %>
				


	<% end %>		
	<% end %>	
			</div>
		</div>
	</div>
</div>


<script>
	$("#c<%= escape_javascript(@conversation.id.to_s() )%> .post").draggable({
											containment: "window",
											helper: "clone",
											scroll: true,
											opacity: 0.7,
											appendTo: "body",
											cursor: 'move',
											revert: true,
											zIndex: 9999,
											activeClass: "post_during_drag"
		        });
</script>

